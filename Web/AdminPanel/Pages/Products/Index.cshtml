@page
@model AdminPanel.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products Managment";
}

<h1>Products Managment</h1>

@if (Model.Products.Any())
{
    <p>
        <a asp-page="Create" class="btn btn-primary">Add New Product</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>SKU</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Sku</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@Model.StockLevels[product.Id] szt.</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@product.Id">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@product.Id">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>
        <a asp-page="Create" class="btn btn-primary">Add First Product</a>
    </p>
    <p>No products found.</p>
}