@page "{id:guid}"
@model AdminPanel.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Remove Product";
}

<h1>Remove Product</h1>

<h3>Are you sure to remove this product?</h3>
<div>
    <h4>@Model.Product.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">SKU</dt>
        <dd class="col-sm-10">@Model.Product.Sku</dd>
        <dt class="col-sm-2">Cena</dt>
        <dd class="col-sm-10">@Model.Product.Price.ToString("C")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Index">Cancel</a>
    </form>
</div>